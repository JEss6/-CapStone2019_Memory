<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="300dp">
    <ImageView
        android:src="@drawable/login_icon"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_width="70dp"
        android:layout_height="70dp" />

    <TextView
        android:id="@+id/recyclerNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="23dp"
        android:text="김김김"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/recyclerDateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="263dp"
        android:layout_marginTop="45dp"
        android:text="2019-04-02 18:39"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/recyclerRentTimeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="312dp"
        android:layout_marginTop="65dp"
        android:text="1시간 대여"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/recyclerOwnerBikeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="65dp"
        android:text="kkc's road123"
        android:textSize="20dp" />

    <RatingBar style="?android:attr/ratingBarStyleSmall"
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginTop="23dp"
        />

    <TextView
        android:id="@+id/recyclerContentView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="110dp"
        android:text="이 자전거는 정말 좋습니다."
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/recyclerBikeImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="110dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/shake_icon" />

</RelativeLayout>